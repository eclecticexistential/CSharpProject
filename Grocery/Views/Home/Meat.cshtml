@model Grocery.Models.Meats[]
@{
    ViewBag.Title = "Meats";
}
<div class="container text-center">
    <h2>@ViewBag.Title</h2>

    <p>Pick Your Animal</p>
    <div class="row bg-red">
        <h3>Beef</h3>
        @foreach (var meatType in Model)
        {
            if (meatType.Animal == "Cow")
            {
                <div class="col-md-2 h-2">
                    <h4>@meatType.DisplayText</h4>
                    <img src="/Images/Meats/@meatType.CoverImageFileName" alt="@meatType.DisplayText" class="h-5 image-responsive" />
                    <h3>$@meatType.Price.00</h3>
                    <p class="mb-5"><bold>@meatType.Description</bold></p>
                    <button class="btn btn-primary auto">Add to Cart</button>
                </div>
            }
        }
    </div>
