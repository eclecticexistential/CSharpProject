@model Grocery.Models.Items[]
@{
    ViewBag.Title = "Shopping Cart";
}

<div class="container text-center">
    <h2>@ViewBag.Title</h2>
    <p>@ViewBag.Message</p>

    @using (Html.BeginForm())
    {
        <div>
            <div class="form-group">
                <h4>Total Price of Purchase: $@ViewBag.TotalPrice.00</h4>
                @foreach (var item in Model)
                {
                    <h4>@item.ItemName</h4>
                    <img src="/Images/Baking/@item.CoverImageFileName" alt="@item.ItemName" class="h-5 image-responsive" />
                    <h3>$@item.Price.00</h3>
                    <p class="mb-5"><bold>@item.Description</bold></p>
                    <button type="submit" class="btn btn-primary auto" value="false">-</button>
                    <button type="submit" class="btn btn-primary auto" value="false">+</button>
                    <button type="submit" class="btn btn-primary auto" value="false">Delete</button>
                }
            </div>
        </div>
    }
</div>